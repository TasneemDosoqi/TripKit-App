<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ticket"
    android:background="#f2f2f2"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/lytevent"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#46A5B9"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/b111"
            android:layout_width="64dp"
            android:layout_height="37dp"
            android:background="#00FFFFFF"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/imagetext"
            android:layout_width="255dp"
            android:layout_height="41dp"
            android:text="Reviwe Ticket"
            android:textAlignment="center"
            android:textColor="#F9F9F9"
            android:textSize="30sp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rrr"
        android:layout_width="393dp"
        android:layout_height="195dp"
        android:layout_below="@+id/lytevent"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_holder"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:padding="8dp">

    <LinearLayout
        android:id="@+id/tt"
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:layout_below="@+id/lin1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/t1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="From"
        android:textAlignment="center"
        android:textColor="#034758"
        android:textSize="60px"/>


    <TextView
        android:id="@+id/t2"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:text="To"
        android:textAlignment="center"
        android:textColor="#034758"
        android:textSize="60px"/>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/rr"
            android:layout_width="352dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tt"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"

            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="DMM"
                android:textAlignment="center"
                android:textSize="50px"/>


            <TextView
                android:id="@+id/t41"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="UK"
                android:textAlignment="center"
                android:textSize="50px"/>

        </LinearLayout>
</RelativeLayout>


    <RelativeLayout
        android:id="@+id/ww"
        android:layout_width="396dp"
        android:layout_height="335dp"
        android:layout_below="@+id/rrr"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_holder"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/q1"
            android:layout_width="352dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/t7"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="50px" />


            <TextView
                android:id="@+id/t81"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="5-9-2019"
                android:textAlignment="center"
                android:textSize="50px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/q2"
            android:layout_width="352dp"
            android:layout_height="40dp"
            android:layout_below="@+id/q1"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/t9"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Time"
                android:textAlignment="center"
                android:textSize="50px" />


            <TextView
                android:id="@+id/t101"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="4:00PM"
                android:textAlignment="center"
                android:textSize="50px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/q3"
            android:layout_width="352dp"
            android:layout_height="40dp"
            android:layout_below="@+id/q2"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/ttt3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Class: "
                android:textAlignment="center"
                android:textSize="50px" />


            <TextView
                android:id="@+id/t2201"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="class"
                android:textAlignment="center"
                android:textSize="50px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/q4"
            android:layout_width="352dp"
            android:layout_height="40dp"
            android:layout_below="@+id/q3"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"

            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/t11"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Seats "
                android:textAlignment="center"
                android:textSize="50px" />


            <TextView
                android:id="@+id/t121"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textAlignment="center"
                android:textSize="50px" />

        </LinearLayout>

        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/q4"
            android:text="PAY"
            android:textAlignment="center"
            android:textSize="50px" />

    </RelativeLayout>



    </RelativeLayout>


